#ifndef BBBSERIAL_H_
#define BBBSERIAL_H_

#include <stdio.h>
#include <string.h>
#include <fcntl.h>
#include <errno.h>
#include <termios.h>
#include <unistd.h>

class BBBSerial{
private:
	int fd;				// file handle
	char buff[20]; 		// read buffer
	volatile int rd,wr; // read character count and write character count
	std::vector<uint8_t> state[6];		// State as a 6-element vector of bytes

public:
	bool readByte(uint8_t);
	bool writeByte(uint8_t);
	bool writeData(std::vector<double>);	// Pass a vector of state info

};


#endif /* BBBSERIAL_H_ */
